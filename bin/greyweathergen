#!/usr/bin/ruby -I ./lib -s

# arbitrary defaults: Weather will be generated for 1st of Planting

$month ||= 4
$numdays ||= 7

require 'YAML'
require 'GreyhawkWeatherGenerator'

weather_generator = GreyhawkWeatherGenerator.new.create_weather_generator $month.to_i, $numdays.to_i

weather_generator.days.each { |d| d.dump }
