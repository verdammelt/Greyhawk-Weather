#!/usr/bin/ruby -I ./lib -s

# arbitrary defaults: Weather will be generated for 1st of Planting

$month ||= 4
$numdays ||= 28

require 'YAML'
require 'GreyhawkWeatherGenerator'

weather_generator = GreyhawkWeatherGenerator.create_weather_generator $month.to_i, $numdays.to_i

i=0
weather_generator.days.each do |d|
  i += 1
  p i.to_s + ": " + d.inspect 
end
